package ru.jcourse.less002.util;

import java.util.Arrays;

import ru.jcourse.less002.components.obj.Command;


public class Parser {

	public static Command parseCommand(String line) {
		String[] st = line.split(" ");
		if (st.length == 0) {
			return null;
		}

		
		
		Command command = new Command();

		String commandName = null;
		// String.split
		if (line.indexOf(" ") >= 0) {
			commandName = line.substring(0, line.indexOf(" ")).trim();
			line = line.substring(line.indexOf(" ") + 1);
		} else
			commandName = line;

		command.setInstructionName(commandName.substring(0, 1).toUpperCase()
				+ commandName.substring(1).toLowerCase());

		while (line.length() > 0) {
			if (line.indexOf(" ") < 0) {
				command.addParam(line);
				break;
			}

			else {
				command.addParam(line.substring(0, line.indexOf(" ")).trim());
				line = line.substring(line.indexOf(" ") + 1);
			}
		}
		return command;
	}

}
